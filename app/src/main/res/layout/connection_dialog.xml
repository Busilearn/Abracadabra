<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efc941"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/stat_notify_error"
        android:visibility="visible"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veuillez activer votre connection internet"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_above="@+id/dialogButtonOK"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TrÃ¨s bien"
        android:textSize="15sp"
        android:background="#2f221a"
        android:textColor="#efc941"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>